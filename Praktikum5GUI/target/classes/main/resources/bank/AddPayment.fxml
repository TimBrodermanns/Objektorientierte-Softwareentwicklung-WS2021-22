<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="bank.controller.AddPaymentController"
            prefHeight="400.0" prefWidth="600.0">

    <Label text="Date: " />
    <TextField fx:id="DateTF"/>
    <Label text="Amount: " />
    <TextField fx:id="amountTF"/>
    <Label text="Description: " />
    <TextField fx:id="desTF"/>
    <Button text="submit" onMouseClicked="#sendPayment"/>
</VBox>
